{
  "name": "jukebox",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently -k \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite --port 3000",
    "dev:electron": "wait-on http://localhost:3000 && cross-env NODE_ENV=development electronmon .",
    "build": "vite build && electron-builder",
    "build:app": "electron-builder",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "concurrently": "^8.2.2",
    "express": "^5.1.0",
    "howler": "^2.2.4",
    "wait-on": "^7.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "cross-env": "^10.1.0",
    "electron": "^37.2.5",
    "electron-builder": "^26.0.12",
    "electronmon": "^2.0.3",
    "eslint": "^9.30.1",
    "globals": "^16.3.0",
    "vite": "^7.0.4"
  },
  "build": {
    "appId": "com.jukebox.app",
    "files": [
      "dist/**/*",
      "electron/**/*"
    ]
  }
}