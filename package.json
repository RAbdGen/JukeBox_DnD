{
  "name": "jukebox",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently -k \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite --port 3000",
    "dev:electron": "wait-on http://localhost:3000 && cross-env NODE_ENV=development electronmon .",
    "build": "vite build && electron-builder",
    "build:linux": "vite build && electron-builder --linux",
    "build:win": "vite build && electron-builder --win",
    "build:app": "electron-builder",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "concurrently": "^8.2.2",
    "howler": "^2.2.4",
    "lowdb": "^7.0.1",
    "wait-on": "^7.0.1"
  },
  "devDependencies": {
    "electron": "^37.2.5",
    "electron-builder": "^26.0.12",
    "electronmon": "^2.0.3",
    "vite": "^7.0.4"
  },
  "build": {
    "appId": "com.jukebox.dnd",
    "productName": "JukeBox DnD",
    "icon": "build/icon.png",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "backend/**/*",
      "build/**/*"
    ],
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Audio",
      "icon": "build/icon.png"
    },
    "win": {
      "target": [
        "portable"
      ],
      "icon": "build/icon.png"
    },
    "mac": {
      "icon": "build/icon.png"
    }
  }
}
